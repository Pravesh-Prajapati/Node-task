<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Subcategory</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <!-- Include Header -->
    <%- include('../header') %>
    <div class="flex">
        <!-- Include Sidebar -->
        <%- include('../sidebar') %>

        <!-- Main Content -->
        <div class="ml-64 flex-1 p-8">
            <!-- Form Container -->
            <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md p-6">
                <h2 class="text-2xl font-bold mb-6 text-gray-800">Add New Subcategory</h2>

                <form action="/admin/addSubCategory" method="POST" class="space-y-6">
                    <!-- Subcategory Name -->
                    <div>
                        <label for="subCategoryName" class="block text-sm font-medium text-gray-700">Subcategory Name</label>
                        <input 
                            type="text" 
                            id="subCategoryName" 
                            name="subCategoryName" 
                            required 
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
                        >
                    </div>

                    <!-- Category Selection -->
                    <div>
                        <label for="categoryId" class="block text-sm font-medium text-gray-700">Category</label>
                        <select 
                            id="categoryId" 
                            name="categoryId" 
                            required 
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
                        >
                            <option value="" disabled selected>Select a category</option>
                            <% allCategories.forEach(category => { %>
                                <option value="<%= category._id %>">
                                    <%= category.categoryName %>
                                </option>
                            <% }) %>
                        </select>
                    </div>

                    <!-- Submit Button -->
                    <div class="flex justify-end">
                        <button 
                            type="submit" 
                            class="bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
                        >
                            Add Subcategory
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
