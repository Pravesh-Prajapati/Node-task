<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Books</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
    <!-- Include Header -->
    <%- include('../header') %>

    <div class="flex">
        <!-- Include Sidebar -->
        <%- include('../sidebar') %>

        <!-- Main Content -->
        <div class="ml-64 flex-1 p-8">
            <h1 class="text-4xl font-extrabold text-gray-800 mb-6 border-b-2 border-gray-300 pb-2">All Books</h1>

            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                <% allBooks.forEach((book) => { %>
                    <div class="bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                        <!-- Book Image -->
                        <img src="<%= book.bookImage %>" alt="<%= book.bookTitle %>"
                            class="h-56 w-full object-cover">
                        <!-- Book Details -->
                        <div class="p-5">
                            <h2 class="text-xl font-semibold text-gray-800 truncate"><%= book.bookTitle %></h2>
                            <p class="text-sm text-gray-600 mt-2">Category: <span class="font-medium"><%= book.categoryId.categoryName %></span></p>
                            <p class="text-sm text-gray-600">SubCategory: <span class="font-medium"><%= book.subCategoryId.subCategoryName %></span></p>
                            <p class="text-sm text-gray-600">Price: <span class="font-medium">â‚¹<%= book.bookPrice.toFixed(2) %></span></p>
                            <p class="text-sm text-gray-600">Pages: <span class="font-medium"><%= book.bookPages %></span></p>
                            <p class="text-sm text-gray-600">Author: <span class="font-medium"><%= book.bookAuthor %></span></p>
                            <p class="text-sm text-gray-600">Publisher: <span class="font-medium"><%= book.bookPublisher %></span></p>
                            <p class="text-sm text-gray-600 truncate">Languages: <span class="font-medium"><%= book.bookLanguage.join(", ") %></span></p>

                            <!-- Description Toggle -->
                            <p class="text-md text-gray-700 mt-2 line-clamp-2"><%= book.bookDescription %></p>

                            <!-- Actions -->
                            <div class="mt-6 flex justify-between">
                                <a href="/admin/editBookPage/<%= book._id %>"
                                    class="bg-blue-600 text-white text-sm px-4 py-2 rounded-lg hover:bg-blue-700 transition">
                                    Edit
                                </a>
                                <a href="/admin/deleteBook/<%= book._id %>"
                                    class="bg-red-500 text-white text-sm px-4 py-2 rounded-lg hover:bg-red-600 transition">
                                    Delete
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</body>

</html>
