<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <!-- Include Header -->
    <%- include('../header') %>
    <div class="flex">
        <!-- Include Sidebar -->
        <%- include('../sidebar') %>

        <!-- Main Content -->
        <div class="ml-64 flex-1 p-8">
            <!-- Form Container -->
            <table class="min-w-full bg-white border border-gray-300">
                <thead>
                    <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                        <th class="py-3 px-6 text-left">#</th>
                        <th class="py-3 px-6 text-left">First Name</th>
                        <th class="py-3 px-6 text-left">Last Name</th>
                        <th class="py-3 px-6 text-left">Email</th>
                        <th class="py-3 px-6 text-left">Gender</th>
                        <th class="py-3 px-6 text-left">Hobbies</th>
                        <th class="py-3 px-6 text-left">Contact No</th>
                        <th class="py-3 px-6 text-left">Info</th>
                        <th class="py-3 px-6 text-left">Profile Image</th>
                        <th class="py-3 px-6 text-left">Action</th>
                    </tr>
                </thead>
                <tbody class="text-gray-600 text-sm">
                    <% admins.forEach((admin, index) => { %>
                        <tr class="border-b border-gray-300 hover:bg-gray-100">
                            <td class="py-3 px-6 text-left"><%= index + 1 %></td>
                            <td class="py-3 px-6 text-left"><%= admin.firstName || '-' %></td>
                            <td class="py-3 px-6 text-left"><%= admin.lastName || '-' %></td>
                            <td class="py-3 px-6 text-left"><%= admin.email || '-' %></td>
                            <td class="py-3 px-6 text-left"><%= admin.gender || '-' %></td>
                            <td class="py-3 px-6 text-left"><%= admin.hobby?.join(', ') || '-' %></td>
                            <td class="py-3 px-6 text-left"><%= admin.contactno || '-' %></td>
                            <td class="py-3 px-6 text-left"><%= admin.info || '-' %></td>
                            <td class="py-3 px-6 text-left">
                                <% if (admin.profileImage) { %>
                                    <img src="<%= admin.profileImage %>" alt="Profile Image" class="w-12 h-12 rounded-full">
                                <% } else { %>
                                    <span class="text-gray-500">No Image</span>
                                <% } %>
                            </td>
                            <td class="py-3 px-6 text-left">
                                <a href="/admin/deleteAdmin/<%= admin.id %>" class="bg-red-600 py-2 px-3 text-white rounded-md">Delete</a>
                                <a href="/admin/editAdminPage/<%= admin.id %>" class="bg-blue-600 py-2 px-3 text-white rounded-md">Edit</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>

        </div>
    </div>

</body>
</html>