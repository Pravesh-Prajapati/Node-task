<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        function toggleSubmenu(id) {
            const submenu = document.getElementById(id);
            const allSubmenus = document.querySelectorAll('.submenu');

            // Close all other submenus
            allSubmenus.forEach(menu => {
                if (menu.id !== id) {
                    menu.classList.add('hidden');
                }
            });
            // Toggle the current submenu
            submenu.classList.toggle('hidden');
        }
    </script>
</head>
<body>
    <div class="bg-gray-800 text-white w-64 min-h-screen flex-shrink-0 fixed left-0 top-0">
        <div class="p-4">
            <!-- Dashboard Title -->
            <a href="/home">
                <h2 class="text-2xl font-bold mb-6">Dashboard</h2>
            </a>

            <!-- Navigation Menu -->
            <nav>
                <ul class="space-y-2">
                    <!-- Admin Section -->
                    <li class="relative">
                        <button 
                            onclick="toggleSubmenu('adminSubmenu')" 
                            class="w-full flex items-center justify-between p-2 text-left rounded-md hover:bg-gray-700 transition-colors duration-200"
                        >
                            <span class="flex items-center">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                                Admin
                            </span>
                            <svg class="w-4 h-4 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </button>
                        <ul id="adminSubmenu" class="submenu hidden mt-2 ml-4 border-l border-gray-700">
                            <li>
                                <a href="/admin/addAdminPage" class="block p-2 hover:bg-gray-700 rounded-md transition-colors duration-200">Add Admin</a>
                            </li>
                            <li>
                                <a href="/admin/viewAdminPage" class="block p-2 hover:bg-gray-700 rounded-md transition-colors duration-200">View Admin</a>
                            </li>
                        </ul>
                    </li>

                    <!-- Category Section -->
                    <li class="relative">
                        <button 
                            onclick="toggleSubmenu('categorySubmenu')" 
                            class="w-full flex items-center justify-between p-2 text-left rounded-md hover:bg-gray-700 transition-colors duration-200"
                        >
                            <span class="flex items-center">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                                </svg>
                                Category
                            </span>
                            <svg class="w-4 h-4 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </button>
                        <ul id="categorySubmenu" class="submenu hidden mt-2 ml-4 border-l border-gray-700">
                            <li>
                                <a href="/admin/addCategoryPage" class="block p-2 hover:bg-gray-700 rounded-md transition-colors duration-200">Add Category</a>
                            </li>
                            <li>
                                <a href="/admin/viewCategoryPage" class="block p-2 hover:bg-gray-700 rounded-md transition-colors duration-200">View Category</a>
                            </li>
                        </ul>
                    </li>

                    <!-- Subcategory Section -->
                    <li class="relative">
                        <button 
                            onclick="toggleSubmenu('subcategorySubmenu')" 
                            class="w-full flex items-center justify-between p-2 text-left rounded-md hover:bg-gray-700 transition-colors duration-200"
                        >
                            <span class="flex items-center">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                                </svg>
                                Subcategory
                            </span>
                            <svg class="w-4 h-4 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </button>
                        <ul id="subcategorySubmenu" class="submenu hidden mt-2 ml-4 border-l border-gray-700">
                            <li>
                                <a href="/admin/addSubCategoryPage" class="block p-2 hover:bg-gray-700 rounded-md transition-colors duration-200">Add Subcategory</a>
                            </li>
                            <li>
                                <a href="/admin/viewSubCategory" class="block p-2 hover:bg-gray-700 rounded-md transition-colors duration-200">View Subcategory</a>
                            </li>
                        </ul>
                    </li>

                    <!-- ===books -->
                    <li class="relative">
                        <button 
                            onclick="toggleSubmenu('bookSubmenu')" 
                            class="w-full flex items-center justify-between p-2 text-left rounded-md hover:bg-gray-700 transition-colors duration-200"
                        >
                            <span class="flex items-center">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                                </svg>
                                Books
                            </span>
                            <svg class="w-4 h-4 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </button>
                        <ul id="bookSubmenu" class="submenu hidden mt-2 ml-4 border-l border-gray-700">
                            <li>
                                <a href="/admin/addBookPage" class="block p-2 hover:bg-gray-700 rounded-md transition-colors duration-200">Add Books</a>
                            </li>
                            <li>
                                <a href="/admin/viewBook" class="block p-2 hover:bg-gray-700 rounded-md transition-colors duration-200">View Books</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</body>
</html>
