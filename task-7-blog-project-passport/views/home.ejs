<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100 flex flex-col min-h-screen">
    <!-- Include header -->
    <%- include('header.ejs') %>
        <main class="flex-grow max-w-7xl mx-auto p-6 min-h-[50vh]">
            <h1 class="text-3xl font-bold text-center mb-6">Blogs</h1>


            <div class="flex flex-wrap justify-center gap-4 mb-6">
                <% const categories = ['All', 'technology', 'lifestyle', 'education', 'health', 'environment']; %>
                <% categories.forEach(category => { %>
                    <a href="<%= category === 'All' ? '/home' : `/home?category=${category}` %>" 
                       class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                        <%= category %>
                    </a>
                <% }); %>
            </div>

            <div class="grid gap-6 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
                <% allBlog.forEach(blog=> { %>
                    <div class="bg-white rounded-lg shadow-md overflow-hidden">
                        <!-- Cover Image -->
                        <img src="<%= blog.coverImage %>" alt="Cover Image" class="w-full h-48 object-cover">

                        <!-- Blog Content -->
                        <div class="p-4">
                            <h2 class="text-xl font-bold mb-2">
                                <%= blog.title %>
                            </h2>
                            <p class="text-sm text-gray-500 mb-4">
                                <%= blog.description %>
                            </p>

                            <!-- Category and Author -->
                            <div class="flex justify-between items-center text-sm text-gray-600 mb-4">
                                <span class="bg-blue-100 text-blue-600 px-2 py-1 rounded">
                                    <%= blog.category %>
                                </span>
                                <span>By <%= blog.author %></span>
                            </div>

                            <!-- Read More Button -->
                            <a href="/admin/singleBlog/<%= blog.id %>"
                                class="block text-center text-white bg-indigo-600 hover:bg-indigo-700 px-4 py-2 rounded-md">Read
                                More</a>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </main>

        <footer class="bg-gray-800 p-4 text-center text-white mt-6">
            <p>&copy; 2024 Blog Website. All rights reserved.</p>
        </footer>
</body>

</html>